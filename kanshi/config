profile single_screen {
    output eDP-1 enable
}

profile external_monitor_only {
    output eDP-1 disable
    output HDMI-A-1 enable
}

profile builtin_monitor_only {
    output eDP-1 enable
    output HDMI-A-1 disable
}

profile extend {
    output eDP-1 enable position 0,0
    output HDMI-A-1 enable position 1920,0
}

profile duplicate {
    output eDP-1 enable mode 1920x1080@60Hz position 0,0
    output HDMI-A-1 enable mode 1920x1080@60Hz position 0,0
}
