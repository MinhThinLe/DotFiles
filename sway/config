# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Your preferred terminal emulator
# Various utilities
set $term           kitty
set $menu           ~/.config/rofi/launchers/type-1/launcher.sh
set $screenshot     ~/.config/rofi/applets/bin/screenshot.sh
set $powermenu      ~/.config/rofi/applets/bin/powermenu.sh
set $clipboard_man  ~/.config/rofi/applets/bin/clipboard.sh
set $calculator     ~/.config/rofi/applets/bin/calculator.sh
set $notif_center   swaync-client -t -sw

include ./config.d/50-systemd-user.conf
include ./keybinds.sh

### Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
output * bg ./wallpapers/mountains.png fill
output eDP-1 scale 1.25
#
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs

### Idle configuration
#
# Example configuration:
#


# Keyboard stuff
input * {
	repeat_delay 250
	repeat_rate 50
}

input "type:keyboard" {
    xkb_options caps:escape
}

input "9390:8213:RAPOO_Rapoo_2.4G_Wireless_Device_Mouse" {
	accel_profile "flat"
	pointer_accel 0.45
}

input "1267:12985:ELAN06FA:00_04F3:32B9_Touchpad" {
	accel_profile "flat"
	pointer_accel 0.2
	tap enabled
}

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.


# Background processes
exec fcitx5 -d
exec nm-applet
exec waybar
exec swaync
exec swayidle -w \
          timeout 300 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
          timeout 600 'hyprlock' \
          before-sleep 'hyprlock'
exec wlsunset -t 3900 -S 6:30 -s 19:30
exec wl-paste --watch cliphist store

client.focused #98971A #98971A #98971A #98971A

default_border pixel 2
default_floating_border pixel 2

gaps inner 8
gaps outer 5

for_window {
    [window_role="pop-up"] floating enable
    [window_role="bubble"] floating enable
    [window_role="task_dialog"] floating enable
    [window_role="Preferences"] floating enable
    [window_type="dialog"] floating enable
    [window_type="menu"] floating enable
    [instance="update_installer"] floating enable
    [app_id="org.gnome.Calculator"] floating enable
}

exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec hash dbus-update-activation-environment 2>/dev/null && \
     dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK

# Swayfx stuff, comment out if on vanilla sway
corner_radius 10
shadows enable
blur enable
